<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="app">
        <description> Hibernate JPA Configuration</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="use_catalina.properties" />
            <property name="javax.persistence.jdbc.user" value="testuser" />
            <property name="javax.persistence.jdbc.password" value="testpass" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.connection.maxIdleTime" value="60"/>
            <!-- todo: this connection pool doesn't work well, need to add c3p0 -->
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.dbcp.maxActive" value="8" />
            <property name="hibernate.dbcp.maxIdle" value="8" />
            <property name="hibernate.dbcp.maxWait" value="-1" />
            <property name="hibernate.dbcp.whenExhaustedAction" value="1" />
            <property name="hibernate.dbcp.testOnBorrow" value="true" />
            <property name="hibernate.dbcp.testOnReturn" value="true" />
            <property name="hibernate.dbcp.validationQuery" value="SELECT 1" />

            <!-- Uncomment this next line to bootstrap a database automatically -->
            <!--

            BE AWARE that running ANY warfile with this last property uncommented enabled will
            potentially update the database schema. Note especially that values of create or create-drop
            will delete the ENTIRE database create-drop also deletes when the web application
            is shut down.

            In general this should be used for development only and "update" would be the preferred value
            for ongoing development.

            For first time creation please run ./gradlew :core:update to ensure proper
            setup of liquibase related tables (which are not known to hibernate)
            -->
<!--            <property name="hibernate.hbm2ddl.auto" value="update" />-->
        </properties>

    </persistence-unit>

</persistence>